<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <Spinner
                    android:id="@+id/choose_modes"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
            <Button
                    android:id="@+id/choose_date"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/date_selector"
                    android:textColor="#fa6cad"
                    android:textSize="15sp"
                    android:background="@drawable/transparent"/>
            <Button
                    android:id="@+id/refresh"
                    android:layout_marginStart="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/refresh_selector"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <Button
                    android:id="@+id/last_page"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:background="@drawable/last_page_selector"/>
            <TextView
                    android:id="@+id/last_page_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="上一页"
                    android:visibility="invisible"
                    android:textColor="#fa6cad"
                    android:textSize="20sp"/>
            <TextView
                    android:id="@+id/page_num"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#fa6cad"
                    android:textSize="25sp"/>
            <TextView
                    android:id="@+id/next_page_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="下一页"
                    android:textColor="#fa6cad"
                    android:textSize="20sp"/>
            <Button
                    android:id="@+id/next_page"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/next_page_selector"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</LinearLayout>